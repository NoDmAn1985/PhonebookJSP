<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>GetAllContactsServlet</servlet-name>
        <servlet-class>ru.academits.servlet.GetAllContactsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddContactsServlet</servlet-name>
        <servlet-class>ru.academits.servlet.AddContactServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RemoveContactsServlet</servlet-name>
        <servlet-class>ru.academits.servlet.RemoveContactServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetAllContactsServlet</servlet-name>
        <url-pattern>/all</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddContactsServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RemoveContactsServlet</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>all</welcome-file>
    </welcome-file-list>

</web-app>
